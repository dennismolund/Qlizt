<div class="column is-one-fifth">
                <div class="card">
                  <div class="card-image">
                    <figure class="image is-4by3">
                    <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
                    </figure>
                  </div>
                  <div class="card-content">
                    <p>{{this.playlistname}}</p>
                    <form action="/song/{{this.id}}/{{this.userId}}" method="get">
                      <button class="btn btn-outline-primary col-sm-6 button is-info" type="submit" >Show playlist</button>
                    </form>
                    <form action="/playlist/update/{{this.id}}" method="get">
                      <input type="hidden" name="isPublic" value={{this.isPublic}}>
                      <button class="btn btn-outline-primary col-sm-6 button is-link" type="submit" >Edit</button>
                    </form>
                    <form action="/playlist/delete/{{this.id}}" method="post">
                      <button class="btn btn-outline-primary col-sm-6 button is-danger" type="submit" >Delete playlist</button>
                    </form>
                  </div>
                </div>
              </div>