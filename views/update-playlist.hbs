{{> header}}

<div class="tile is-ancestor">
  {{#if isLoggedIn}}
    {{> accountMenu}}
  {{/if}}
  <div class="tile is-vertical is-10 " id="contentOverview">
    <div class="tile">
      <div class="tile is-parent">
        <div class="tile is-child">

 <section class="section">
        <div class="container">
            <h2 class="title ml-4">Edit playlist</h2>
            
    <form action="/playlist/update/{{playlistId}}" method="post">
        <div class="columns is-vcentered">
      <div class="login column is-4 ">
        <section class="section">

          <div class="field">
            <label class="label">Edit Playlist name</label>
            {{#if error}}
              <p>{{error}}</p>
            {{/if}}
            <div class="control">
              <input class="input" type="text" name="playlistName" placeholder="Write new name"> 
            </div>
          </div>

          {{#ifEquals isPublic 1}}
          <label class="checkbox">
            <input type="checkbox" name="checkbox" id="checkbox" checked="true" value="0">
            Change From public to private
          </label>
          {{/ifEquals}}
          {{#ifEquals isPublic 0}}
          <label class="checkbox">
            <input type="checkbox" name="checkbox" id="checkbox" value="1">
            Change from private to public
          </label>
          {{/ifEquals}}
          
          <div class="field">
            
              <input class="button is-vcentered is-rounded is-outlined" type="submit" value="Done"></input>
            
          </div>
          
        </section>
      </div>
    </div>
    </form>
    </section>
    </div>
      </div>
    </div>
  </div>
</div>
    {{> footer}}